@model WebTabanliProje.Areas.Users.ViewModels.RecordsEdit

<div class="container">
    <h1 class="my-3">Edit Record</h1>
    <form action="EditRecord" method="post">
        <input hidden name="Record_Id" value=@Model.Record_Id>
        <div class="row">
            <div class="form-group col-md-3">
                <label for="Amount">Amount</label>
                <input class="form-control" data-val="true" id="Amount" name="Amount" required="True" type="number" step="any" min="0"  value="@Model.Amount">
            </div>
            <div class="form-group col md-3">
                <label for="Type">Type</label>
                <select class="form-control" id="Type" name="Type">
                    <option selected="">Expense</option>
                    <option @Html.Raw(Model.Type == "Income"?"selected='selected'":"")>Income</option>
                </select>
            </div>
            <div class="col-md-4 form-group">
                <label for="Category">Category</label>
                <select class="form-control" id="Category" name="Category">
                    @foreach (string category in WebTabanliProje.Areas.Users.Controllers.HomeController.CategoriesList)
                     {
                        <option @Html.Raw(Model.Category == category?"selected='selected'":"")>@category</option>
                     }
                </select>
            </div>
            <div class="col-md-2"></div>
        </div>
    
        <div class="row form-group col-md-8">
            <label for="Note">Note</label>
            <textarea class="form-control" id="Note" name="Note" rows="4" maxlength="254" @Html.Raw(Model.Note == null?"placeholder='Type a message for your record(Optional)'":"") placeholder="@Model.Note"></textarea>
        </div>
    
        <div class="mt-3">
            <input type="submit" value="Edit Record" class="btn btn-outline-primary" />
            <a class="ml-2" href="@Url.Action("index")">or cancel</a>
        </div>
    </form>
</div>
@model WebTabanliProje.Areas.Admin.ViewModels.UsersResetPassword

<h1>Reset Password for @Model.UserName</h1>
@using (Html.BeginForm())
{
    if (ViewData.ModelState.ContainsKey("ResetPassword"))
    {
        <div class="alert alert-danger">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, "Errors: ")
        </div>
    }
    <div class="form-group">
        <label for="UserName">Username</label>
        <input class="form-control" type="text" placeholder="@Model.UserName" readonly>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        @Html.PasswordFor(f => f.UserPassword, new { @class = "form-control", placeholder = "Password can not be empty", required = true })
    </div>
    <input type="submit" value="Reset Password" class="btn btn-outline-primary" />
    <a class="ml-2" href="@Url.Action("index")">or cancel</a>
}
@model WebTabanliProje.Areas.Admin.ViewModels.UsersIndex

<h1>Users</h1>

<a href="@Url.Action("Create")">
    <button class="btn btn-sm btn-outline-primary my-2">
        <i class="fa fa-user-plus pr-1"></i>Add User
    </button>
</a>

<table class="table table-hover mt-2">
    <thead class="bg-dark">
        <tr>
            <th class="text-white" scope="col">Id</th>
            <th class="text-white" scope="col">User Name</th>
            <th class="text-white" scope="col">E-Mail</th>
            <th class="text-white" scope="col">Roles</th>
            <th class="text-white" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
         {
            <tr>
                <th>@user.Id</th>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@String.Join(", ", user.Roles.Select(p => p.RoleName))</td>
                <td>
                    <div class="btn-group-sm" role="group">
                        <a href="@Url.Action("Edit",new { user.Id })"><button type="button" class="btn btn-sm btn-primary"><i class="fa pr-1 fa-edit"></i>Edit</button></a>
                        <a href="@Url.Action("ResetPassword", new { user.Id })"><button type="button" class="btn btn-sm btn-light"><i class="fa pr-1 fa-unlock-alt"></i>Reset Password</button></a>
                        <a href="@Url.Action("Delete", new { user.Id })" data-post="Are you sure you want to delete @user.UserName"><button type="button" class="btn btn-sm btn-danger"><i class="fa pr-1 fa-user-times"></i>Delete</button></a>
                    </div>
                </td>
            </tr>
         }
    </tbody>
</table>